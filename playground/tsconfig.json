{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.tsx", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@bluryar/composables": ["../packages/composables"],
      "@bluryar/composables/*": ["../packages/composables/*"],
      "@bluryar/shared": ["../packages/shared"],
      "@bluryar/shared/*": ["../packages/shared/*"]
    }
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
