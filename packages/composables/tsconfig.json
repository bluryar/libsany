{
  "extends": "@bluryar/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "types": [
      "node", "jsdom"
    ],
    "paths": {
      "@bluryar/shared": ["../shared/index.ts"],
      "@bluryar/shared/*": ["../shared/src/*"]
    }
  },
  "include": [
    "../env.d.ts",
    "index.ts",
    "*.config.ts",
    "src"
  ],
  "exclude": [
    "test",
    "test/**/*.vue",
    "test/**/*.test.ts",
    "test/**/*.test.tsx"
  ]
}
